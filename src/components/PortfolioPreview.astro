---
import type { CollectionEntry } from "astro:content";

interface Props {
  project: CollectionEntry<"work">;
}

const { data, slug } = Astro.props.project;
---

<a
  href={`/work/${slug}`}
  class="mx-auto max-w-screen-2xl border-x transition duration-300 ease-in-out hover:shadow-md"
>
  <img
    class="flex h-full w-full flex-col object-cover"
    src={data.thumb}
    alt={data.img_alt}
    loading="lazy"
    decoding="async"
  />
</a>
