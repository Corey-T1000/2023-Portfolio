---
import "@splidejs/splide/css";
import Navbar from "@/components/navbar.astro";
import Footer from "@/components/footer.astro";
---

<html lang="en">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content="{Astro.generator}" />
    <title>Corey T - Visual Designer</title>
  </head>
  <body class="bg-neutral-100">
    <div class="mx-auto w-full justify-center">
      <Navbar />
      <section id="Header">
        <div class="border-gray mx-auto max-w-screen-2xl border-x p-8 py-32">
          <div class="max-w-2xl">
            <div class="mb-4 text-sm font-light uppercase tracking-widest">
              Visual Designer & maker of things.
            </div>
            <span class="mt-4 text-3xl font-light text-neutral-800">
              Oh hi, I'm Corey,<span class="text-neutral-200"
                ><br class="inline sm:hidden" />
                (you probably knew that)</span
              >
              <br />I design brands from seed <br class="inline sm:hidden" /> and
              beyond.
            </span>
            <div class="mt-12 sm:mt-8 lg:ml-auto">
              <a
                href="/contact"
                class="inline-flex items-center rounded-full bg-neutral-800/5 px-6 py-2 text-sm uppercase tracking-wider text-neutral-800 duration-200 hover:bg-white"
                >Lets Talk</a
              >
            </div>
          </div>
        </div>
      </section>

      <section id="Featured Work">
        <div
          class="border-gray mx-auto max-w-screen-2xl border-x border-y py-8 md:border-t-0"
        >
          <div
            class="align-center w-full justify-between pl-8 text-left md:inline-flex"
          >
            <div class="mb-8 pr-8 text-sm font-light uppercase tracking-widest">
              Featured Work
            </div><div
              class="mb-8 hidden flex-auto self-center border-b border-neutral-200 md:flex"
            >
            </div>
          </div>
          <div class="border-gray mx-auto max-w-screen-2xl border-x">
            <div
              class="divide-gray grid grid-cols-1 gap-4 text-neutral-800 sm:grid-cols-2 lg:grid-cols-3 lg:divide-x xl:grid-cols-4"
            >
              <img class="flex flex-col" src="../images/gremlin.gif" />
              <img class="flex flex-col" src="../images/statype.gif" />
              <img class="flex flex-col" src="../images/gremlin.gif" />
              <img class="flex flex-col" src="../images/gremlin.gif" />
            </div>
          </div>
        </div>
        <Footer />
      </section>
    </div>
  </body>
</html>
