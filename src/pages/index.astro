---
import "@splidejs/splide/css";

import Grid from "../components/Grid.astro";
import PortfolioPreview from "../components/PortfolioPreview.astro";
import OldWorkPreview from "../components/OldWorkPreview.astro";
import BaseLayout from "../layouts/BaseLayout.astro";
---

<BaseLayout>
  <div class="mx-auto w-full justify-center">
    <section id="Hero">
      <div
        class="border-gray mx-auto max-w-screen-2xl border-x p-8 pb-16 pt-32"
      >
        <div class="max-w-2xl">
          <div class="mb-4 text-sm font-light uppercase tracking-widest">
            Visual Designer & maker of things.
          </div>
          <span class="mt-4 text-3xl font-light text-neutral-800">
            I've had the fortune of working with amazing teams & people while
            creating everything here. <br />
            <span class="text-neutral-200"
              ><br class="inline sm:hidden" />
              (I hope you'll be next)</span
            >
          </span>
          <div class="mt-12 sm:mt-8 lg:ml-auto">
            <a
              href="/contact"
              class="inline-flex items-center rounded-full bg-neutral-800/5 px-6 py-2 text-sm uppercase tracking-wider text-neutral-800 duration-200 hover:bg-white"
              >Lets Talk</a
            >
          </div>
        </div>
      </div>
    </section>
    <section id="Recent Work">
      <div
        class="border-gray mx-auto max-w-screen-2xl border-x py-8 md:border-t-0"
      >
        <div class="mx-auto w-full justify-center">
          <Grid>
            <PortfolioPreview />
            <OldWorkPreview />
          </Grid>
        </div>
      </div>
    </section>
  </div>
</BaseLayout>
